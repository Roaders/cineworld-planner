{
    "name": "cineworld-planner",
    "description": "An Application to help plan multi-film visits to cineworld",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "clean": "rimraf dist",
        "start": "ng serve --open",
        "build-node": "tsc -p src/node/tsconfig.json",
        "watch-build-node": "tsc -p src/node/tsconfig.json --watch",
        "start-node": "ts-node --project src/node/tsconfig.json src/node/index.ts",
        "watch-node": "nodemon",
        "predebug-node": "npm run clean && npm run build-node",
        "debug-node": "node --inspect dist",
        "build": "ng build",
        "test": "ng test",
        "watch-test": "ng test --watch",
        "lint": "ng lint"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~8.2.11",
        "@angular/common": "~8.2.11",
        "@angular/compiler": "~8.2.11",
        "@angular/core": "~8.2.11",
        "@angular/forms": "~8.2.11",
        "@angular/platform-browser": "~8.2.11",
        "@angular/platform-browser-dynamic": "~8.2.11",
        "@angular/router": "~8.2.11",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.1",
        "axios": "^0.19.0",
        "bootstrap": "^4.3.1",
        "cors": "^2.8.5",
        "moment": "^2.24.0",
        "nodemon": "^1.19.4",
        "rimraf": "^3.0.0",
        "rxjs": "~6.4.0",
        "tslib": "^1.10.0",
        "zone.js": "~0.9.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.803.12",
        "@angular/cli": "~8.3.12",
        "@angular/compiler-cli": "~8.2.11",
        "@angular/language-service": "~8.2.11",
        "@types/jasmine": "~3.3.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "codelyzer": "^5.0.0",
        "express": "^4.17.1",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~4.1.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "protractor": "~5.4.0",
        "ts-node": "~7.0.0",
        "tslint": "~5.15.0",
        "typescript": "~3.5.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Roaders/cineworld-planner.git"
    }
}
