{
    "name": "cineworld-planner",
    "description": "An Application to help plan multi-film visits to cineworld",
    "version": "1.2.0",
    "scripts": {
        "clean": "rimraf dist build",
        "start-app": "ng serve --open",
        "start-app-local": "ng serve --open",
        "start-app-ring": "ng serve --open --configuration=ring",
        "start-app-production": "ng serve --open --configuration=production",
        "watch-build-node": "tsc -p src/node/tsconfig.json --watch",
        "start-ts-node": "ts-node --project src/node/tsconfig.json src/node/server/index.ts",
        "start-node": "node dist/node/server",
        "watch-node": "nodemon",
        "predebug-node": "npm run clean && npm run build-node",
        "preverify-release": "npm run clean",
        "build-app": "ng build",
        "build-node": "tsc -p src/node/tsconfig.json",
        "debug-node": "node --inspect dist/node/server",
        "build": "ng build",
        "build-prod": "ng build --configuration=production",
        "build-release": "npm run clean && npm run verify-release",
        "postbuild-release": "docker build -f Dockerfile -t roaders/cineworldplanner:latest . && docker push roaders/cineworldplanner:latest",
        "watch-test": "ng test",
        "verify-release": "ngcc && concurrently npm:build-node npm:test npm:build-prod",
        "run-release": "node dist/node/release",
        "push": "npm version patch && git push origin --follow-tags",
        "test": "ng test --watch=false --browsers=ChromeHeadless",
        "lint": "ng lint"
    },
    "private": true,
    "dependencies": {
        "axios": "^0.25.0",
        "cors": "^2.8.5",
        "express": "^4.17.2",
        "ftp": "^0.3.10",
        "rxjs": "~6.6.7"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~13.3.10",
        "@angular/animations": "~13.2.1",
        "@angular/cli": "~13.2.2",
        "@angular/common": "~13.2.1",
        "@angular/compiler": "~13.2.1",
        "@angular/compiler-cli": "~13.2.1",
        "@angular/core": "~13.2.1",
        "@angular/forms": "~13.2.1",
        "@angular/language-service": "~13.2.1",
        "@angular/platform-browser": "~13.2.1",
        "@angular/platform-browser-dynamic": "~13.2.1",
        "@angular/router": "~13.2.1",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/ftp": "^0.3.33",
        "@types/jasmine": "~3.6.0",
        "@types/jasminewd2": "^2.0.10",
        "@types/lodash": "^4.14.178",
        "@types/node": "^15.6.2",
        "ajv": "^6.12.6",
        "bootstrap": "^4.6.1",
        "concurrently": "^5.3.0",
        "font-awesome": "^4.7.0",
        "geolib": "^3.3.3",
        "jasmine-core": "^3.99.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "~6.3.15",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~3.0.2",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "nodemon": "^1.19.4",
        "rimraf": "^3.0.2",
        "ts-node": "~7.0.0",
        "tslib": "^2.0.0",
        "tslint": "~6.1.0",
        "typescript": "~4.5.5",
        "zone.js": "~0.11.4",
        "jquery": "^1.12.4",
        "popper.js": "^1.16.1"
    },
    "bundledDependencies": [
        "express",
        "cors",
        "rxjs",
        "axios"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Roaders/cineworld-planner.git"
    },
    "engines": {
        "node": "16.x"
    }
}
