{
    "name": "cineworld-planner",
    "description": "An Application to help plan multi-film visits to cineworld",
    "version": "1.0.43",
    "scripts": {
        "ng": "ng",
        "clean": "rimraf dist",
        "start-app": "ng serve --open",
        "start-app-local": "ng serve --open --configuration=local",
        "start-app-production": "ng serve --open --configuration=production",
        "heroku-postbuild": "npm run build-release",
        "watch-build-node": "tsc -p src/node/tsconfig.json --watch",
        "start-ts-node": "ts-node --project src/node/tsconfig.json src/node/server/index.ts",
        "start-node": "node dist/node/server",
        "watch-node": "nodemon",
        "predebug-node": "npm run clean && npm run build-node",
        "preverify-release": "npm run clean",
        "build-app": "ng build",
        "build-node": "tsc -p src/node/tsconfig.json",
        "debug-node": "node --inspect dist/node/server",
        "build": "ng build",
        "build-prod": "ng build --configuration=production",
        "build-release": "npm run clean && concurrently npm:build-node npm:build-prod",
        "watch-test": "ng test",
        "verify-release": "concurrently npm:build-node npm:test npm:build-prod",
        "run-release": "node dist/node/release",
        "push": "npm version patch && git push origin --follow-tags",
        "test": "ng test --watch=false --browsers=ChromeHeadless",
        "lint": "ng lint"
    },
    "private": true,
    "dependencies": {
        "@types/lodash": "^4.14.144",
        "axios": "^0.19.0",
        "axios-observable": "^1.1.2",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "ftp": "^0.3.10",
        "rxjs": "~6.6.7",
        "tslib": "^1.10.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.901.15",
        "@angular/animations": "~9.1.13",
        "@angular/cli": "~9.1.15",
        "@angular/common": "~9.1.13",
        "@angular/compiler": "~9.1.13",
        "@angular/compiler-cli": "~9.1.13",
        "@angular/core": "~9.1.13",
        "@angular/forms": "~9.1.13",
        "@angular/language-service": "~9.1.13",
        "@angular/platform-browser": "~9.1.13",
        "@angular/platform-browser-dynamic": "~9.1.13",
        "@angular/router": "~9.1.13",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.1",
        "@types/ftp": "^0.3.29",
        "@types/jasmine": "~3.3.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "^12.11.1",
        "bootstrap": "^4.3.1",
        "codelyzer": "^5.1.2",
        "concurrently": "^5.0.0",
        "font-awesome": "^4.7.0",
        "geolib": "^3.0.4",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~4.1.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "lodash": "^4.17.15",
        "moment": "^2.24.0",
        "nodemon": "^1.19.4",
        "protractor": "~5.4.0",
        "rimraf": "^3.0.0",
        "ts-node": "~7.0.0",
        "tslint": "~5.15.0",
        "typescript": "~3.8.3",
        "zone.js": "~0.10.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Roaders/cineworld-planner.git"
    },
    "engines": {
        "node": "10.x"
    }
}
